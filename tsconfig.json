{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["./src/config/*"],
      "@shared/*": ["./src/shared/*"],
      "@modules/*": ["./src/modules/*"]
    },
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "removeComments": false
  }
}
